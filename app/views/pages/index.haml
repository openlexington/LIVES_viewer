.row
  .col-md-8
    %h1
      LIVES Viewer
      %small
        Explore Health Inspection Data
.row
  .col-md-6
    %p.lead
      Find inspections and violations for restaurants in your city.

.row
  .col-md-6
    = form_tag('/business_search', {class: 'form'}) do
      .input-group
        = text_field_tag :query, nil, {class: 'form-control search', placeholder: 'Search for a business', id: 'search', autocomplete: 'off'}
        %span.input-group-btn
          = submit_tag "Search", {class: 'btn btn-primary'}
.row
  .col-md-6
    %h2
      Average Score:
      = @average


.row
  .col-md-4.well
    %h3
      Worst Violators
    %table.table
      %thead
        %tr
          %th
            Business
          %th
            Score
      %tbody
        - @offenders.each do |inspection|
          %tr
            %td
              = link_to inspection.business.name, business_path(inspection.business)
            %td
              = inspection.score

  .col-md-4.well
    %h3
      Top Scores
    %table.table
      %thead
        %tr
          %th
            Business
          %th
            Score
      %tbody
        - @top.each do |inspection|
          %tr
            %td
              = link_to inspection.business.name, business_path(inspection.business)
            %td
              = inspection.score
