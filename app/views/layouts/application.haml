!!! 5
%html
  %head
    %title
      LIVES Viewer
    = stylesheet_link_tag    "bootstrap.min"
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=#{ENV["GMAPS_KEY"]}&sensor=false"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    .container
      .row
        .col-md-12
          .navbar
            .navbar-inner
              = link_to "LIVES Viewer", root_path, {class: 'brand'}
              %ul.nav
                %li
                  = link_to "About", about_path
                %li
                  = link_to "Businesses", businesses_path


      = yield
